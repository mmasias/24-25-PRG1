package entregas.caicedoEsteban;

import java.util.Scanner;
import java.util.Random;

public class PiedraPapelTijera {
    public static void main(String[] args) {
        final int PIEDRA = 0;
        final int PAPEL = 1;
        final int TIJERA = 2;

        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        System.out.println("¡Juguemos Piedra, Papel o Tijera!");
        System.out.println("Elige entre las siguientes opciones: 0 = Piedra, 1 = Papel, 2 = Tijera");

        
        int eleccionUsuario = scanner.nextInt();

        
        int eleccionComputadora = random.nextInt(3);

        // Imprimir elecciones
        System.out.println("Tú elegiste: " + (eleccionUsuario == PIEDRA ? "Piedra" : eleccionUsuario == PAPEL ? "Papel" : "Tijera"));
        System.out.println("La computadora eligió: " + (eleccionComputadora == PIEDRA ? "Piedra" : eleccionComputadora == PAPEL ? "Papel" : "Tijera"));

        
        int resultado = (3 + eleccionUsuario - eleccionComputadora) % 3;

        
        System.out.println(resultado == 0 ? "¡Empate!" : (resultado == 1 ? "¡Ganaste!" : "Perdiste :/");

        scanner.close();
    }
}